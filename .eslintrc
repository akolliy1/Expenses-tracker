{
    "root": true,
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "browser": true,
      "jquery": true
    },
    "globals": {
      "request": true,
      "server": true,
      "addressModel": true,
      "userModel": true,
      "bucketListModel": true,
      "bucketItemModel": true,
      "generateToken": true,
      "signinHash": true
    },
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "linebreak-style": 0,
      "one-var": 0,
      "one-var-declaration-per-line": 0,
      "max-len": [1, 80, 4],
      "new-cap": 0,
      "no-useless-escape": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "eqeqeq": 0,
      "func-names": 0,
      "curly": ["error", "multi-line"],
      "import/extensions": "off",
      "comma-dangle": 0,
      "jsx-a11y/media-has-caption": 0,
      "experimentalDecorators": 0,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "import/no-unresolved": "off",
      "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": true,
          "requireReturnType": true,
          "requireParamDescription": false,
          "requireReturnDescription": true
        }
      ],
      "require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "jsx-a11y/label-has-for": [
        2,
        {
          "components": ["Label"],
          "required": {
            "every": ["id"]
          },
          "allowChildren": false
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": ["Link"],
          "specialLink": ["to"]
        }
      ]
    }
  }